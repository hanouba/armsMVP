<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_login_title"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/color_0B8FFE">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/login_lg" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:text="iVsom智慧运维管理系统"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_login_info"
        android:layout_below="@id/rl_login_title"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000"
            android:text="系统登录"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="项目名称"
            style="@style/style_login_info_title" />


        <EditText
            android:id="@+id/et_project_name"
            android:text="whtv"
            android:hint="请输入项目全称"
            style="@style/style_login_edit" />

        <TextView

            android:text="姓名"
            style="@style/style_login_info_title" />

        <EditText
            android:id="@+id/et_user_name"
            android:hint="请输入账户"
            android:text="whtv"
            style="@style/style_login_edit"/>

        <TextView
            android:text="密码"
            style="@style/style_login_info_title" />
        <EditText
            android:id="@+id/et_pass_word"
            android:hint="请输入密码"
            android:text="123456"
            style="@style/style_login_edit"/>


        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:text="登录"
            android:id="@+id/bt_login"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@color/color_0B8FFE"
            android:layout_height="40dp"/>


        <RelativeLayout
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_forgete_password"
                android:text="忘记密码？"
                style="@style/style_login_other_text" />

            <TextView
                android:id="@+id/tv_forget_project_name"
                android:layout_centerHorizontal="true"
                android:text="忘记项目名称？"
                style="@style/style_login_other_text" />

            <TextView
                android:id="@+id/tv_new_create_project"
                android:layout_alignParentRight="true"
                android:text="新建项目"
                style="@style/style_login_other_text" />

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_login_info"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="登录即代表阅读并同意"
            android:textColor="#B2B8CB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_terms"
            android:text="服务条款"
            android:layout_marginLeft="6dp"
            android:textColor="@color/color_0B8FFE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>